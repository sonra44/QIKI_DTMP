# Development Dockerfile для QIKI DTMP FastStream миграции
# Версия: 1.0
# Дата: 2025-08-19

FROM python:3.12-slim

# Метаданные
LABEL maintainer="QIKI DTMP Development Team"
LABEL description="Development environment for QIKI DTMP FastStream migration"
LABEL version="1.0"

# Установка рабочей директории
WORKDIR /workspace

# Ensure project packages imported from src/
ENV PYTHONPATH=/workspace/src:/workspace

# Copy ruff.toml and set environment variable for RUFF config
COPY ruff.toml /app/ruff.toml
ENV RUFF_CONFIG=/app/ruff.toml

# Установка переменных окружения, чтобы Python выводил логи сразу и не создавал .pyc файлы
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Установка системных зависимостей
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Копирование файлов с зависимостями
COPY requirements.txt .
COPY requirements-faststream.txt .
COPY requirements-dev.txt .
COPY tools/qiki_docgen/requirements.txt tools/qiki_docgen/requirements.txt

# Установка Python зависимостей
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-faststream.txt && \
    pip install --no-cache-dir -r requirements-dev.txt && \
    pip install --no-cache-dir -r tools/qiki_docgen/requirements.txt

# Установка buf CLI для lint/breaking проверок protobuf контрактов
RUN curl -sSL https://github.com/bufbuild/buf/releases/download/v1.45.0/buf-Linux-x86_64.tar.gz \
    | tar -xz -C /usr/local && \
    ln -sf /usr/local/buf/bin/buf /usr/local/bin/buf

# Копирование остального кода проекта в рабочую директорию
COPY . .

# Команда по умолчанию для запуска контейнера (интерактивная сессия)
CMD ["bash"]
